= form_for @title do |f|
  - if @title.errors.any?
    #error_explanation
      %h2= "#{pluralize(@title.errors.count, "error")} prohibited this title from being saved:"
      %ul
        - @title.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :created_by_user
    = f.text_field :created_by_user
  .actions
    = f.submit 'Save'
